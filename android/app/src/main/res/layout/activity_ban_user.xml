<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthActivities.BanUserActivity"
    android:background="@color/backgroundColor"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="12dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Your account has been banned"
            android:textAlignment="center"
            android:textColor="@color/textBlack"
            android:textSize="32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This account has been banned due to a violation of our terms of service. If you believe this is a mistake, please contact support."
            android:textAlignment="center"
            android:textColor="@color/textBlack"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            />

        <Button
            android:id="@+id/bannedContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="@color/foregroundErrorColor"
            android:text="Contact Support"
            android:backgroundTint="@color/backgroundErrorColor"
            />

        <Button
            android:id="@+id/exitApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Exit App"
            android:backgroundTint="@color/backgroundButtonColor1"
            android:textColor="@color/foregroundButtonColor1"
            />

        <Button
            android:id="@+id/logOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Log Out"
            android:backgroundTint="@color/backgroundButtonColor1"
            android:textColor="@color/foregroundButtonColor1"
            />




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>